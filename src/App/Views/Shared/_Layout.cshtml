<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <script defer src="~/lib/htmx.min.js" asp-append-version="true"></script>

    <title>@ViewData["Title"] - App</title>
</head>
<body>
    <header style="display:flex; justify-content:space-between; max-width:720px; margin-left:auto; margin-right:auto;">
        <nav style="display:flex; gap:1rem;">
            <a asp-controller="Home" asp-action="Index">FeedHub</a>
        </nav>
        <nav>
            <a href="@AuthController.LoginPath">Login</a>
        </nav>
    </header>

    <main role="main" style="max-width:720px; margin-left:auto; margin-right:auto;">
        @RenderBody()
    </main>
 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>